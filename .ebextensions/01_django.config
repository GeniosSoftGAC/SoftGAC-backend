option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "SoftGAC.settings"
    PYTHONPATH: "/var/app/current:$PYTHONPATH"
  aws:elasticbeanstalk:container:python:
    WSGIPath: "SoftGAC.wsgi:application"
container_commands:
  01_makemigrations:
    command: "pipenv shell && python3 manage.py makemigrations --noinput"
    leader_only: true
  02_migrate:
    command: "pipenv shell && python3 manage.py migrate --noinput"
    leader_only: true
  03_superuser:
    command: "pipenv shell /var/app/venv/*/bin/activate && python3 manage.py createsu"
    leader_only: true