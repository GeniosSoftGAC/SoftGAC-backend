container_commands:
  01_migrate:
    command: "python SoftGAC/manage.py migrate"
    leader_only: true
  02_collectstatic:
    command: "python SoftGAC/manage.py collectstatic --noinput"
  03_createsu:
    command: "python SoftGAC/manage.py createsu"
    leader_only: true

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "SoftGAC.settings"
    "PYTHONPATH": "/opt/python/current/app/SoftGAC:$PYTHONPATH"
    "ALLOWED_HOSTS": ".elasticbeanstalk.com"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: "SoftGAC/SoftGAC/wsgi.py"
    StaticFiles: "/static/=SoftGAC/static/"